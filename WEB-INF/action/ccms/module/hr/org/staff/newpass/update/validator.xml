<?xml version='1.0' encoding='UTF-8'?>
<validator onerror="/action/ccms/validate">
	<parameter id="user_id" type="integer" required="true" label="user_id"/>
	<parameter id="userlogin" type="varchar" required="false" label="userlogin"/>
	<parameter id="passwd1" type="varchar" required="true" label="${lbl:s_fld_password}" maxlen="15" regexp="\w{6,}?" regexp-error-label="${lbl:s_invalid_password}" />
	<parameter id="confirm1" type="varchar" required="true" label="${lbl:s_fld_confirm}" maxlen="15" />

	<custom-validator 	
		classname="dinamica.validators.MatchEqualValidator" 
		on-error-label="两次输入的密码不一致." id="passwd1"
		value1="passwd1" value2="confirm1" />

	<custom-validator 	
		classname="dinamica.security.PasswordEncryptor" 
		on-error-label="MD5加密失败"  id="passwd1" />

</validator>

